<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_show_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="790dp"
        android:layout_height="450dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="90dp"
       
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:background="@drawable/introduce" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                
                android:layout_marginTop="100dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:text="name"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/show_poster"
                    android:layout_width="190dp"
                    android:layout_height="310dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@null"
                    android:layout_marginTop="13dp"
                    android:paddingBottom="50dp"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jiantou_left1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="fitCenter" >
        </ImageView>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/jiantou_shang1"
                android:contentDescription="@null"
                android:scaleType="fitCenter" >
            </ImageView>

            <GridView
                android:id="@+id/show_grid"
                android:layout_width="360dp"
                android:layout_height="340dp"
              	android:layout_marginTop="10dp"
                android:horizontalSpacing="20dp"
                android:nextFocusLeft="@id/show_grid"
                android:nextFocusRight="@id/show_grid"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jiantou_xia1"
                android:layout_gravity="center"
                 android:layout_marginTop="10dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter" >
            </ImageView>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/jiantou_right1"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:scaleType="fitCenter" >
        </ImageView>
    </LinearLayout>

</LinearLayout>