<?xml version="1.0" encoding="utf-8"?>     
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
 	android:layout_width="fill_parent" 
 	android:layout_height="fill_parent"   
 	android:background="@drawable/index_right"  
 	>
 	
     <ImageView 
        android:id="@+id/guanjia_bg"
        android:src="@drawable/guanjia_bg" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="190dp"
        />
     
     <ImageView 
        android:id="@+id/pic"
        android:src="@drawable/pic" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="657dp"
        />
     
    <TextView   
	   	android:id="@+id/butlerservice_txt" 
	   	android:layout_width="450dp"   
	   	android:layout_height="wrap_content"
		android:textColor="@android:color/holo_red_dark"
		android:textSize="14sp"
		android:lineSpacingExtra="8dp"
	   	android:layout_marginLeft="275dp"
	   	android:layout_marginTop="195dp"
	   	/>
    
    <TextView
        android:id="@+id/butlerservicecontent_txt" 
	   	android:layout_width="wrap_content"   
	   	android:layout_height="wrap_content"
		android:textColor="@android:color/white"
		android:textSize="13sp"
	   	android:layout_marginLeft="470dp"
	   	android:layout_marginTop="336dp"
	   	android:text="@string/butlerservicecontent_txt"
        />
    
    <GridView 
        android:id="@+id/butlerservice_gridview"  
   	 	android:layout_width="520dp"   
    	android:layout_height="150dp"  
    	android:numColumns="3" 
    	android:verticalSpacing="5dp"
    	android:gravity="left"  
    	android:layout_marginLeft="265dp"
	   	android:layout_marginTop="365dp"
	   	android:listSelector="@android:color/transparent"
        />
    
</RelativeLayout>