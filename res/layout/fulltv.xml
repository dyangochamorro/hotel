<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:id="@+id/ll_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="horizontal" >
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="46dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:padding="3dp" />

    <LinearLayout
        android:id="@+id/vol_layout"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:background="@drawable/tv_voice_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/vol_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/vol_sound" />

        <ProgressBar
            android:id="@+id/vol_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/music_player_progress_style" />

        <TextView
            android:id="@+id/vol"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <com.shine.hotels.ui.AlwaysMarqueeTextView
        android:id="@+id/pop_up_txt"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginTop="40dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:keepScreenOn="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    
    <ImageView android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:src="@drawable/letter1"
        android:visibility="gone"/>

</FrameLayout>