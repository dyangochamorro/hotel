<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item android:id="@android:id/background">
	<shape >
            <corners android:radius="10dp" />
            <solid android:color="#1e0910"/>
            <stroke android:color="#9a5709"
                android:width="1dp"/>
    </shape>
    
</item>

<item android:id="@android:id/progress">
	<clip >
            <shape >
                <corners android:radius="10dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="#ddc040"
                    android:centerY="0.45"
                    android:endColor="#ffffbe"
                    android:startColor="#e4bf32" />
            </shape>
	</clip>
</item>
</layer-list>